;;events
ev0 : [
	trigger : time == 50,
	assign : [
		x0 = x0 + u0,
		x2 = x2 + u0
		],
	]

;;reactions
r0 : [x0 -> x1, p0*x0]
r1 : [x1 -> x2, p1*x1, p2*x2]

;;tspan
c0 : !linspace, 0, 100, 21!
c1 : !linspace, 0, 100, 21!

